<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#63ADC7">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:showDividers="end">
            <ImageView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_close_white_24dp"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:onClick="goBack"/>
            <TextView
                android:id="@+id/project_name"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:text="Project Settings"
                android:paddingRight="26dp"
                android:paddingEnd="26dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
            <ImageView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_check_white_24dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:onClick="saveSettings"/>

        </FrameLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="23dp"
        android:paddingStart="23dp"
        android:paddingRight="40dp"
        android:paddingEnd="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name "
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/Name"
            android:hint="Add Project Name..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="23dp"
        android:paddingStart="23dp"
        android:paddingRight="23dp"
        android:paddingEnd="23dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color "
            android:textSize="20sp"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/color_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/red"
                android:buttonTint="@color/light_red" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orange"
                android:buttonTint="@color/light_orange"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yellow"
                android:buttonTint="@color/light_yellow"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/green"
                android:buttonTint="@color/light_green"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cyan"
                android:buttonTint="@color/light_cyan"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/aqua"
                android:buttonTint="@color/light_aqua"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blue"
                android:buttonTint="@color/light_blue"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/purple"
                android:buttonTint="@color/light_purple"/>
        </RadioGroup>
    </LinearLayout>
    <FrameLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:paddingLeft="23dp"
        android:paddingStart="23dp"
        android:paddingRight="23dp"
        android:paddingEnd="23dp">
        <TextView
            android:drawableRight="@drawable/ic_person_add_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Members "
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_gravity="right|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_aqua"
            android:text="Invite New Member..."/>
    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="140dp"
        android:layout_width="match_parent"
        android:paddingLeft="23dp"
        android:paddingStart="23dp"
        android:paddingRight="23dp"
        android:paddingEnd="23dp">
        <TextView
            android:drawableRight="@drawable/ic_notifications_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications "
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_gravity="right|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_aqua"
            android:text="Edit Notifications..."/>
    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:paddingLeft="23dp"
        android:paddingStart="23dp"
        android:paddingRight="23dp"
        android:paddingEnd="23dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maybe there is something else "
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_gravity="right|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_aqua"
            android:text="Edit Something Else..."/>
    </FrameLayout>
</LinearLayout>