<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="io.github.cmw025.nifty.CalendarFragment">

    <me.nlmartian.silkcal.DayPickerView
        xmlns:calendar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@android:color/white"
        calendar:drawRoundRect="false"/>

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px" />

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_labelColor="#166"
        app:mtf_image="@drawable/edit"
        app:mtf_cardCollapsedHeight="4dp"
        app:mtf_openKeyboardOnFocus="true"
        app:mtf_animationDuration="200"
        android:layout_gravity="center"
        >

        <EditText
            android:id="@+id/add_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add New..."
            android:textColor="#333"
            android:textSize="15sp"
            android:inputType="text"
            android:imeOptions="actionSend"
            android:singleLine="true" />

    </com.github.florent37.materialtextfield.MaterialTextField>

</FrameLayout>
