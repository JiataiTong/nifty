<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a63ADC7"
    android:orientation="vertical"
    tools:context="io.github.cmw025.nifty.ProjectListFragment">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#63ADC7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:contentDescription="Add"

                android:id="@+id/add_project"

                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/ic_add_white_24dp" />
            />
        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    
    <it.gmariotti.cardslib.library.view.CardListView xmlns:card="http://schemas.android.com/tools"
        android:id="@+id/myList"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        card:list_card_layout_resourceID="@layout/example" />

    <include layout="@layout/list_card_undo_material_message" />





</LinearLayout>
